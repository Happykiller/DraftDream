{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "outDir": "./dist-tests",
    "noEmit": false,
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "jsx": "react-jsx",
    "rootDir": "."
  },
  "include": [
    "tests/**/*.ts",
    "src/layouts/hooks/useNavItems.tsx",
    "src/layouts/hooks/useNavItems.ts"
  ],
  "exclude": ["node_modules", "dist", "dist-tests"]
}
