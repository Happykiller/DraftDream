{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "outDir": "./dist-tests",
    "noEmit": false,
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "node",
    "allowImportingTsExtensions": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "rootDir": "."
  },
  "include": [
    "tests/**/*.ts",
    "src/layouts/hooks/useNavItems.tsx",
    "src/layouts/hooks/useNavItems.ts",
    "src/commons/enums.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "dist-tests"
  ]
}